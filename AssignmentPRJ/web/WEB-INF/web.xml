<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>controller.authentication.loginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>scheduleController</servlet-name>
        <servlet-class>controller.reportStudent.timetableForStudentsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>timetableForInstructorController</servlet-name>
        <servlet-class>controller.instructor.timetablForIntructorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListAttendanceGroups</servlet-name>
        <servlet-class>controller.instructor.listAttendanceGroupsForTodayController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>attendanceServletController</servlet-name>
        <servlet-class>controller.instructor.listStudentForTakeAttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addAttendanceServlet</servlet-name>
        <servlet-class>controller.instructor.takeAttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewAttendanceController</servlet-name>
        <servlet-class>controller.instructor.viewAttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>attendanceReportForStudent</servlet-name>
        <servlet-class>controller.reportStudent.attendanceReportForStudents</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateAttendanceController</servlet-name>
        <servlet-class>controller.instructor.updateAttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>homeController</servlet-name>
        <servlet-class>controller.reportStudent.homeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>statusController</servlet-name>
        <servlet-class>controller.instructor.statusController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>proccessController</servlet-name>
        <servlet-class>controller.authentication.logoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>homeControllerForInsructor</servlet-name>
        <servlet-class>controller.instructor.homeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>scheduleController</servlet-name>
        <url-pattern>/schedule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>timetableForInstructorController</servlet-name>
        <url-pattern>/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListAttendanceGroups</servlet-name>
        <url-pattern>/listattendancegroups</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>attendanceServletController</servlet-name>
        <url-pattern>/attendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addAttendanceServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewAttendanceController</servlet-name>
        <url-pattern>/viewattendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>attendanceReportForStudent</servlet-name>
        <url-pattern>/viewattendstudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateAttendanceController</servlet-name>
        <url-pattern>/updateattendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>statusController</servlet-name>
        <url-pattern>/statuss</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>proccessController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homeControllerForInsructor</servlet-name>
        <url-pattern>/homes</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
